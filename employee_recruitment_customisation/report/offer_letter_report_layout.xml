<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<template id="external_layout_offer_letter_header">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                
                
            </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                         adding d-inline class fixes the problem-->
                    
                    <span t-field="company.name"/>: <t t-esc="company.street"/> <t t-esc="company.street2"/>,
                          <t t-esc="company.city"/>,
                          <t t-esc="company.state_id.name"/>,
                          <t t-esc="company.country_id.name"/> - 
                          <t t-esc="company.zip"/>: <span t-field="company.email"/>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
        </template>
        
    	<template id="external_layout_offer_letter">
            <div class="article o_report_layout_standard" >                
                <!-- Multicompany -->
                <t t-if="not o and doc">
                    <t t-set="o" t-value="doc"/>
                </t>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"/>
                </t>

                <t t-call="employee_recruitment_customisation.external_layout_offer_letter_header"/>
                
                <t t-raw="0"/>
            </div>
        </template>

        <!-- salary annexure -->

        <template id="external_layout_salary_annexure_header">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                
                
            </div>
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                
                <t t-raw="0"/>
            </div>

        </template>

        <template id="external_layout_salary_annexure">
            <div class="article o_report_layout_standard" >                
                <!-- Multicompany -->
                <t t-if="not o and doc">
                    <t t-set="o" t-value="doc"/>
                </t>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"/>
                </t>

                <t t-call="employee_recruitment_customisation.external_layout_salary_annexure_header"/>
                    <t t-raw="0"/>
            </div>
        </template>
    </data>
</odoo>


